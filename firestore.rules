rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // ゲーム結果の保存を許可（誰でも読み書き可能）
    match /gameResults/{document} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false; // 更新・削除は禁止
    }
    
    // その他のコレクションは拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
